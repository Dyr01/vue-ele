// 1px边框
border-1px($color)
  position relative
  border none
  &:after
    content ""
    position absolute
    bottom 0
    left 0
    width 100%
    height 1px
    background-color $color

//图片选择
bg-image($url)
  background-image url($url + "@2x.png")
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url($url + "@3x.png")

//评星图片
bg-star($url)
  background-image url($url + "@2x.png")
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url($url + "@3x.png")
